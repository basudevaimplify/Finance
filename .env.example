# Database Configuration
# Replace with your PostgreSQL database URL
DATABASE_URL=postgresql://username:password@localhost:5432/qrt_closure

# OpenAI API Key (get from https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
NODE_ENV=development
PORT=5000

# Session Configuration (change in production)
SESSION_SECRET=your_secret_session_key_here

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# Authentication Configuration (for local development)
AUTH_MODE=simple